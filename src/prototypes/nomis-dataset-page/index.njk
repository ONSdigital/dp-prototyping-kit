{% extends "src/layouts/prototype.njk" %}

{% block body %}
    <div class="wrapper mb-8">
        {% include "breadcrumbs.njk" %}

        <header class="mb-8">
        <h1 class="page-intro__title margin-bottom--3">
          <span class="page-intro__type padding-top--0 padding-bottom--0">Census dataset:</span>
          <strong>{{nomisdataset.title}}</strong>
          </h1>
            {# <h1 class="mb-1 p-0 text-3xl font-bold">NOMIS Dataset thing</h1> #}
        </header>
        {# <div class="mb-16" id="areas">
            <h2 class="text-md font-bold mb-2">Areas within </h2>

        </div> #}
    </div>
    <div class="meta-wrap meta-wrap--thin" style="background: transparent; border-top: none;">
      <div class="wrapper">
      <dl class="col-wrap">
      <div class="col col--md-16 col--lg-20 padding-left-sm--0 meta__item">
        <dt class="meta__term inline">Release date:</dt>
        <dd class="inline">{{nomisdataset.release_date}}</dd>
      </div>
      <div class="col col--md-16 col--lg-20 padding-left-sm--0 meta__item">
        <dt class="meta__term inline">Release frequency:</dt>
        <dd class="inline">{{nomisdataset.release_frequency}}</dd>
      </div>
      <div class="col col--md-16 col--lg-20 padding-left-sm--0 meta__item">
        <dt class="meta__term inline">Next release:</dt>
        <dd class="inline">{{nomisdataset.next_release}}</dd>
      </div>
      </dl>
      </div>
    </div>
  <div class="wrapper mb-8">
    <div class="col-wrap">
    <div class="col col--lg-two-thirds col--md-two-thirds">
      <section class="dataset-description">
        <p class="text-base">{{nomisdataset.description}}</p>
      </section>
      <section>
        <h2 class="font-weight-700 margin-bottom--2">Get the data</h2>
        <a href="https://www.nomisweb.co.uk/census/2011/ks106ew" class="btn btn--primary btn--thick font-weight-700" role="button" rel="external">Access this data on NOMIS <span class="icon icon-external--light-small"></span></a>
        <p>Access to this dataset is provided on NOMIS.</p>
        <h4 class="font-weight-700">Keywords</h4>
        <ul class="nav-secondary__list">
        {%- for k in nomisdataset.keywords -%}
          <li class="nav-secondary__item"><a href="?q={{k}}">{{k}}</a></li>
        {%- endfor -%}
        </ul>
        </ul>
        
        <h3 class="font-weight-700">{{nomisdataset.notetitle}}</h3>
        {{nomisdataset.note | safe}}
      </section>
    </div>
    <!-- Contact col -->
    <div class="col col--lg-one-third col--md-one-third margin-top margin-bottom">
      <div class="tiles__item tiles__item--nav-type margin-left--0 margin-right--0">
      <h3 class="tiles__title-h3 tiles__title-h3--nav">Contact details for this dataset</h3>
      <div class="tiles__content tiles__content--nav">
      <address>
      <span class="contact-name block">Nomis</span>
      <span class="contact-email block"><a href="mailto:support@nomisweb.co.uk?subject=KS106EW">support@nomisweb.co.uk</a></span>
      <span class="contact-phone block" style="font-variant-numeric: tabular-nums;">+44(0) 191 3342680</span>
      </address>
      </div>
      </div>
      <div class="tiles__item tiles__item--nav-type margin-left--0 margin-right--0">
        <h3 class="tiles__title-h3 tiles__title-h3--nav">Related datasets</h3>
          <div class="tiles__content tiles__content--nav">
            <ul class="list--neutral">
              <li><a href="https://www.ons.gov.uk/census">Census 2021</a></li>
            </ul>
          </div>
      </div>
      </div>
    <!-- END Contact col -->
    </div>
  </div>
{% endblock body %}